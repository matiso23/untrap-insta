{
  "manifest_version": 3,
  "name": "Untrap Insta",
  "version": "1.0.0",
  "description": "Toggle visibility of Instagram Reels and Explore buttons.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Untrap Insta",
    "default_icon": {
      "48": "icons/untrap-insta-icon.svg"
    }
  },
  "icons": {
    "48": "icons/untrap-insta-icon.svg",
    "128": "icons/untrap-insta-icon.svg"
  }
}
