{
  "manifest_version": 3,
  "name": "Untrap Insta",
  "version": "1.0.0",
  "description": "Toggle visibility of Instagram Reels and Explore buttons.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Untrap Insta",
    "default_icon": {
      "48": "icons/untrap-insta-icon-with-background-48px.png"
    }
  },
  "icons": {
    "48": "icons/untrap-insta-icon-with-background-48px.png",
    "128": "icons/untrap-insta-icon-with-background-128px.png",
    "512": "icons/untrap-insta-icon-with-background-512px.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
